<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Freight Club Suite">

	<listeners>
		<listener class-name="org.uncommons.reportng.HTMLReporter" />
		<listener class-name="com.qualitesoft.core.CustomTestListener" />
	</listeners>

	<parameter name="project" value="FreightClub" />
	<parameter name="browser" value="chrome" />
	<parameter name="URL" value="https://qa.freightclub.com/" />
	<parameter name="retryCount" value="1" />

	<test name="Test verify user is able to add bills">
		<parameter name="fcusername" value="info@freightclub.com" />
		<parameter name="fcpassword" value="Welcome@2" />
		<classes>
			<class name="com.qualitesoft.freightclub.testscripts.TestSignIn" />
			<class
				name="com.qualitesoft.freightclub.testscripts.managebilling.TestAddBill" />
			<class
				name="com.qualitesoft.freightclub.testscripts.managebilling.TestBillOnListing"></class>
		</classes>
	</test>

	<test name="Logout as an admin 1">
		<classes>
			<class name="com.qualitesoft.freightclub.testscripts.TestLogOff" />
		</classes>
	</test>

	<test name="Test verify user is able to upload the bill">
		<parameter name="fcusername" value="info@freightclub.com" />
		<parameter name="fcpassword" value="Welcome@2" />
		<classes>
			<class name="com.qualitesoft.freightclub.testscripts.TestSignIn" />
			<class
				name="com.qualitesoft.freightclub.testscripts.managebilling.TestAddBillUsingFile"></class>
			<class
				name="com.qualitesoft.freightclub.testscripts.managebilling.TestViewBill"></class>

		</classes>
	</test>

	<test name="Test verify user is able to delete bills">
		<classes>
			<class
				name="com.qualitesoft.freightclub.testscripts.managebilling.TestDeleteBill"></class>
		</classes>
	</test>

	<test name="Test verify details on order detail page">
		<classes>
			<class
				name="com.qualitesoft.freightclub.testscripts.managebilling.TestBillsDetails"></class>
		</classes>
	</test>

	<test name="Logout as an admin 2">
		<classes>
			<class name="com.qualitesoft.freightclub.testscripts.TestLogOff" />
		</classes>
	</test>
	<test name="Test verify Export bills">
		<parameter name="fcusername" value="info@freightclub.com" />
		<parameter name="fcpassword" value="Welcome@2" />
		<classes>
			<class name="com.qualitesoft.freightclub.testscripts.TestSignIn" />
			<class
				name="com.qualitesoft.freightclub.testscripts.managebilling.TestExportBills"></class>
		</classes>
	</test>
	<test name="Logout as an admin 3">
		<classes>
			<class name="com.qualitesoft.freightclub.testscripts.TestLogOff" />
		</classes>
	</test>

	<test name="Test verify pagination on Manage billing page">
		<parameter name="fcusername" value="info@freightclub.com" />
		<parameter name="fcpassword" value="Welcome@2" />
		<classes>
			<class name="com.qualitesoft.freightclub.testscripts.TestSignIn" />
			<class
				name="com.qualitesoft.freightclub.testscripts.managebilling.TestPagination"></class>
		</classes>
	</test>

	<test name="Logout as an admin 4">
		<classes>
			<class name="com.qualitesoft.freightclub.testscripts.TestLogOff" />
		</classes>
	</test>


	<test name="Test verify pagination on Manage billing page">
		<parameter name="fcusername" value="info@freightclub.com" />
		<parameter name="fcpassword" value="Welcome@2" />
		<classes>
			<class name="com.qualitesoft.freightclub.testscripts.TestSignIn" />
			<class
				name="com.qualitesoft.freightclub.testscripts.managebilling.TestBillOnListing"></class>
		</classes>
	</test>


</suite>	